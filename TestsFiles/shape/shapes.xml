<animation>
  <animatedShape name="soleil" rotationCenterX="200" rotationCenterY="350">
    <circle radius="50">
        <point x="200" y="300"></point>
        <lineColor>ORANGE</lineColor>
    </circle>
    <compositeShape name="figure">
      <circle radius="10">
        <point x="180" y="280"></point>
        <lineColor>WHITE</lineColor>
      </circle>
      <circle radius="10">
        <point x="220" y="280"></point>
        <lineColor>WHITE</lineColor>
      </circle>
    </compositeShape>
  </animatedShape>
  <animatedShape name="voiture" rotationCenterX="200" rotationCenterY="300">
    <circle radius ="15">
      <point x="200" y="350"> </point>
      <lineColor>WHITE</lineColor>
    </circle>
    <circle radius ="15">
      <point x="300" y="350"> </point>
      <lineColor>WHITE</lineColor>
    </circle>
    <rectangle width="100" height="50">
      <point x="200" y="300"></point>
      <lineColor>YELLOW</lineColor>
    </rectangle>
  </animatedShape>
  <animatedShape name="bonhommeNeige" rotationCenterX="300" rotationCenterY="200">
    <circle radius ="10">
      <point x="270" y="200"> </point>
      <lineColor>YELLOW</lineColor>
    </circle>
    <circle radius="20">
      <point x="300" y="200"></point>
      <lineColor>GREY</lineColor>
    </circle>
    <circle radius="30">
      <point x="350" y="200"></point>
      <lineColor>BLUE</lineColor>
    </circle>
  </animatedShape>
</animation>